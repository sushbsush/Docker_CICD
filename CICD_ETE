pipeline {
    agent {label 'build'}
    stages {
        stage('my Build') {
            steps {
                sh 'docker build -t tomcat_build:${BUILD_NUMBER} .'
                sh 'helm package ./helm/tomcat --version=${BUILD_NUMBER}'
            }
        }  
        stage('publish stage') {
            steps {
                sh "echo ${BUILD_NUMBER}"
                withCredentials([usernamePassword(credentialsId: 'dockerHub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]){
                    sh "docker login -u ${env.dockerHubUSER} -p ${env.dockerHubPassword}"
                sh 'docker tag tomcat_build:${BUILD_NUMBER} sushbsush/tomcat:${BUILD_NUMBER}'
                sh 'docker push sushbsush/tomcat:${BUILD_NUMBER}'
                    
                sh 'curl -usushmithasuhu2@gmail.com:Sush@98765 -T tomcat-${BUILD_NUMBER}.tgz \"https://sushu.jfrog.io/artifactory/default-helm/tomcat-${BUILD_NUMBER}.tgz\"'
                }
            }
        } 
        stage( 'my deploy' ) {
        agent {label 'deploy'} 
            steps {
               sh 'helm repo add helm https://sushu.jfrog.io/artifactory/api/helm/default-helm --username sushmithasuhu2@gmail.com --password Sush@98765'
               sh 'helm repo update'
               sh 'helm repo list'
               sh 'helm upgrade --install mytomcat helm/tomcat --version=${BUILD_NUMBER} --set selector_matchlabels=tomcat --set deployment_name=tomcat --set replicas=2 --set registry_name=sushbsush --set docker_repo_name=tomcat --set image_tag=${BUILD_NUMBER} --set port_name=tomcat --set target_port=8080 --set port=8080'
            }
        }    
    } 
}
